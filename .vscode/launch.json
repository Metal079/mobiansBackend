    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend:app",
                "--reload",
                "--host=0.0.0.0",
                "--port=9000",
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "mobians.azurewebsites.net",
                "port": 3000 // the port you have chosen for debugpy in your FastAPI app
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}", 
                    "remoteRoot": "." // replace this with the remote root folder of your application
                }
            ]
        }
    ]
}
